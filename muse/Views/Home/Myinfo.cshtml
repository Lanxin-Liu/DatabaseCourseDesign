@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="x-ua-compatible" content="ie=edge">
    <title>Muse</title>
    <meta name="description" content="">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <link rel="shortcut icon" type="image/png" href="/assets/images/fev.png">
    <!-- Place favicon.ico in the root directory -->
    <!-- animate -->
    <link rel="stylesheet" href="/assets/css/animate.css">
    <!-- font-awesome -->
    <link rel="stylesheet" href="/assets/css/font-awesome.min.css">
    <!-- owl carousel -->
    <link rel="stylesheet" href="/assets/css/owl.carousel.min.css">
    <!-- owl theme default -->
    <link rel="stylesheet" href="/assets/css/owl.theme.default.min.css">
    <!-- pe-icon-7-stroke -->
    <link rel="stylesheet" href="/assets/css/pe-icon-7-stroke.min.css">
    <!-- magnific popup -->
    <link rel="stylesheet" href="/assets/css/magnific-popup.css">
    <!-- bootstrap -->
    <link rel="stylesheet" href="/assets/css/bootstrap.min.css">
    <!-- swiper -->
    <link rel="stylesheet" href="/assets/css/swiper.css">
    <!-- audioplayer -->
    <link rel="stylesheet" href="/assets/css/audioplayer.css">
    <!-- menu -->
    <link rel="stylesheet" href="/assets/css/menu.css">
    <!-- main -->
    <link rel="stylesheet" href="/assets/css/main.css">
    <!-- responsive -->
    <link rel="stylesheet" href="/assets/css/responsive.css">
    <!-- default -->
    <link rel="stylesheet" href="/assets/css/default.css">
    <!-- color -->
    <link rel="stylesheet" href="/assets/css/color.css">

</head>

<body>

    <!--[if lte IE 9]>
      <p class="browserupgrade">You are using an <strong>outdated</strong> browser. Please <a href="https://browsehappy.com/">upgrade your browser</a> to improve your experience and security.</p>
    <![endif]-->

    <header class="header-nav-area js-index1-nav sticky-on">
        <!-- header-nav -->
        <div class="container-fluid">
            <div class="row flexbox-center">
                <div class="col-md-2 col-sm-2">

                    <div class="logo">
                        <a href="index.html"><img src="/assets/images/logo.png" alt="Devaid logo"></a>
                    </div>
                </div><!-- col-lg-4 -->

                <div class="col-md-7 header-nav-none">
                    <nav class="header-nav">
                        <div class="cssmenu" data-title="Menu">
                            <ul class="menu list-inline">
                                <li class="active">
                                    <a href="/Home/index">发现</a>
                                </li>
                                <li>
                                    <a href="/Home/Myinfo">我的信息</a>
                                </li>
                                <li>
                                    <a href="/Home/Songlist">我的歌单</a>
                                </li>
                                <li>
                                    <a href="/Home/Playhistory">我的历史</a>
                                </li>
                                <li>
                                    <a href="/Home/News">消息中心</a>
                                </li>
                                <li>
                                    <a href="/Home/Createproduct">我的创作</a>
                                </li>
                            </ul>
                        </div><!-- #header-menu-wrap -->
                    </nav><!-- .header-nav -->
                </div><!-- col-lg-7 -->

                <div class="col-md-3 pl-0 pull-right">
                    <div class="header-icon text-right">
                        <ul class="list-inline">
                            <li class="music primary-bg" id="js-music"> <i class="fa fa-music"></i></li>
                            <li class=""><a href="login.html"><i class="fa fa-sign-in"></i></a></li>
                            <li class="sidebar-menu"><span id="sidebar_menu_icon"><img alt="Icon" src="/assets/images/menu.png"></span></li>
                        </ul>
                    </div><!-- header-icon -->
                </div>
            </div><!-- row -->
        </div><!-- container -->
    </header><!-- header-nav -->

    <div class="js-offcanvas-menu js-index1-nav" id="js_offcanvas_menu">
        <nav class="header-nav">
            <span class="js-offcanvas-close"><i class="pe-7s-close"></i></span>
            <div class="cssmenu" data-title="Menu">
                <ul class="menu list-inline">
                    <li class="active">
                        <a href="/Home/index">发现</a>
                    </li>
                    <li>
                        <a href="/Home/Myinfo">我的信息</a>
                    </li>
                    <li>
                        <a href="/Home/Songlist">我的歌单</a>
                    </li>
                    <li>
                        <a href="/Home/Playhistory">我的历史</a>
                    </li>
                    <li>
                        <a href="/Home/News">消息中心</a>
                    </li>
                    <li>
                        <a href="/Home/Createproduct">我的创作</a>
                    </li>
                </ul>
            </div><!-- #header-menu-wrap -->
            <div class="widget mt-3">
                <div class="js-widget-search">
                    <form>
                        <input type="text" required="" placeholder="搜索...">
                        <i><img alt="search icon" src="/assets/images/search.png" style="top:-7px"></i>
                    </form>
                </div>
            </div>
        </nav> <!-- header-nav -->
    </div><!-- js-offcanvas-menu -->



    <section class="js-breadcrumb-area">
        <div class="container">
            <div class="row d-flex align-items-center">
                <div class="col-md-12 text-center has-color">
                    <div class="js-breadcrumb-content">
                        <h2>我 <span class="primary-color">的 </span>信 息</h2>
                    </div>

                </div>
            </div>
        </div>
    </section><!-- js-breadcrumb-area -->


    <div class="js-login2-area d-flex align-items-left  text-center">

        <div class="container void">
            <div class="js-login-content js-registartion-content bg-white">

                <div align=center>
                    <img src="/assets/images/1.jpg" alt="noway" style="width:150px; height:150px; border-radius:50%; box-shadow: 0px 0px 50px 0px  rgb(97, 97, 97)">
                    <p>  </p>
                </div>

                <div class="row">
                    <div class="col-lg-4"></div>
                    <div class="col-lg-1">
                        <a href="#"><img id="vipbtn" src=@ViewBag.isVIP alt="noway" /></a>
                    </div>
                    <div class="col-lg-1">
                        <a href="#"><img id="redbtn" src=@ViewBag.red alt="noway"></a>
                    </div>
                    <div class="col-lg-1">
                        <a href="#"><img src="/assets/images/honor0.png" alt="noway"></a>
                    </div>
                    <div class="col-lg-1">
                        <a href="#"><img src="/assets/images/honor0.png" alt="noway"></a>
                    </div>

                    <!--勋章墙，仅仅分为VIP和依据听歌次数分的初级中级高级，若想做成未达到勋章的要求显示灰色的话，图标分别为vip0.png和honor0.png-->
                </div>

                <div class="row">
                    <div class="col-lg-2"></div>
                    <div class="col-lg-10">

                        <div class="row">
                            <div class="col-lg-3 ">
                                <h2 class="text-left primary-color" style="margin: 7px">用户ID：</h2>
                            </div>
                            <div class="col-lg-7 col-xl-9">
                                <h2 class="text-left" style="margin: 10px">@ViewBag.id</h2>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-lg-3">
                                <h2 class="text-left primary-color" style="margin: 10px">昵称：</h2>
                            </div>
                            <div class="col-lg-7 col-xl-8">
                                <h2 class="text-left" style="margin: 10px">@ViewBag.name</h2>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-lg-3">
                                <h2 class="text-left primary-color" style="margin: 10px">性别：</h2>
                            </div>
                            <div class="col-lg-7 col-xl-9">
                                <h2 class="text-left" style="margin: 10px">@ViewBag.sex</h2>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-lg-3">
                                <h2 class="text-left primary-color" style="margin: 10px">生日：</h2>
                            </div>
                            <div class="col-lg-7 col-xl-9">
                                <h2 class="text-left" style="margin: 10px">@ViewBag.Birthday</h2>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-lg-3">
                                <h2 class="text-left primary-color" style="margin: 10px">VIP：</h2>
                            </div>
                            <div class="col-lg-5">
                                <h2 class="text-left" style="margin: 10px">@ViewBag.Viptime 天</h2>
                            </div>
                            <div class="col-lg-2">
                                <button id="buy-vip-btn" class="btn btn-secondary" vipdays=@ViewBag.Viptime style="margin: 18px; padding: 5px;">充值</button>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-lg-3">
                                <h2 class="text-left primary-color" style="margin: 10px">邮箱：</h2>
                            </div>
                            <div class="col-lg-7 col-xl-9">
                                <h2 class="text-left" style="margin: 10px">@ViewBag.Email</h2>
                            </div>
                        </div>
                    </div>
                </div>
                <p>  </p>
                <div align=center>
                    <div class="col-lg-2 ">
                        <a href="/Home/Event" class="btn btn-primary">修改信息</a>
                    </div>
                </div>
                <p>  </p>

            </div>
        </div>
    </div>
    <script src="/assets/js/vendor/jquery-3.3.1.min.js"></script>
    <script src="/assets/js/bootstrap.min.js"></script>
    <script src="/assets/js/owl.carousel.min.js"></script>
    <script src="/assets/js/jquery.magnific-popup.min.js"></script>
    <script src="/assets/js/plugins.js"></script>
    <script src="/assets/js/menu.js"></script>
    <script src="/assets/js/countdown.js"></script>
    <script src="/assets/js/jquery.jplayer.min.js"></script>
    <script src="/assets/js/jplayer.playlist.min.js"></script>
    <script src="/assets/js/audio-player.js"></script>
    <script src="/assets/js/audioplayer.js"></script>
    <script src="/assets/js/main.js"></script>
    <script type="text/javascript"></script>
    <script type="text/javascript">
        $('#buy-vip-btn').on('click', function () {
            $.ajax({
                type: 'POST',
                url: '/Home/BuyVip',
                data: {
                    viptime: parseInt(Number($(this).attr('vipdays')))
                },
                success: function (viptime) {
                    window.location.reload();
                },
                error: function (e) {
                    alert('lalal');
                }
            });
        });
    </script>
</body>
</html>
