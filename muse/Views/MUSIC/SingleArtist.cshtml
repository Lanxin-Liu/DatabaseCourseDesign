    <header class="header-nav-area js-common-nav sticky-on">
        <!-- header-nav -->
        <div class="container-fluid">
            <div class="row d-flex align-items-center">
                <div class="col-md-2 col-sm-6">
                    <div class="logo">
                        <a href="index.html"><img src="/assets/images/logo.png" alt="Devaid logo"></a>
                    </div>
                </div><!-- col-lg-4 -->
                <div class="col-md-7 header-nav-none">
                    <nav class="header-nav">
                        <div class="cssmenu" data-title="Menu">
                            <ul class="menu list-inline">
                                <li>
                                    <a href="index.html">发现</a>
                                </li>
                                <li>
                                    <a href="myinfo.html">我的信息</a>
                                </li>
                                <li>
                                    <a href="SongList.html">我的歌单</a>
                                </li>
                                <li>
                                    <a href="playhistory.html">我的历史</a>
                                </li>
                                <li>
                                    <a href="News.html">消息中心</a>
                                </li>
                                <li>
                                    <a href="create.html">我的创作</a>
                                </li>
                                <li>
                                    <a href="/Search/Searchresult">搜索</a>
                                </li>
                            </ul>
                        </div><!-- #header-menu-wrap -->
                    </nav><!-- .header-nav -->
                </div><!-- col-lg-7 -->

                <div class="col-md-3 pl-0 pull-right">
                    <div class="header-icon text-right">
                        <ul class="list-inline">
                            <li class="music primary-bg" id="js-music"> <i class="fa fa-music"></i></li>
                            <li class=""><a href="login.html"><i class="fa fa-sign-in"></i></a></li>
                            <li class="sidebar-menu"><span id="sidebar_menu_icon"><img alt="Icon" src="/assets/images/menu.png"></span></li>
                        </ul>
                    </div><!-- header-icon -->
                </div>
            </div><!-- row -->
        </div><!-- container -->
    </header><!-- header-nav -->

    <div class="js-offcanvas-menu js-index1-nav" id="js_offcanvas_menu">
        <nav class="header-nav">
            <span class="js-offcanvas-close"><i class="pe-7s-close"></i></span>
            <div class="cssmenu" data-title="Menu">
                <ul class="menu list-inline">
                    <li>
                        <a href="index.html">发现</a>
                    </li>
                    <li>
                        <a href="myinfo.html">我的信息</a>
                    </li>
                    <li>
                        <a href="SongList.html">我的歌单</a>
                    </li>
                    <li>
                        <a href="playhistory.html">我的历史</a>
                    </li>
                    <li>
                        <a href="News.html">消息中心</a>
                    </li>
                    <li>
                        <a href="create.html">我的创作</a>
                    </li>
                    <li>
                        <a href="/Search/Searchresult">搜索</a>
                    </li>
                </ul>
            </div><!-- #header-menu-wrap -->
            
        </nav> <!-- header-nav -->
    </div><!-- js-offcanvas-menu -->
    <section class="js-breadcrumb-area">
        <div class="container">
            <div class="row d-flex align-items-center">
                <div class="col-md-12 text-center has-color">
                    <div class="js-breadcrumb-content">
                        <h2>歌 <span class="primary-color">手 </span>介 绍</h2>
                    </div>
                </div>
            </div>
        </div>
    </section><!-- js-breadcrumb-area -->

    <section class="bg-dark has-color pb-0">
        <div class="container">
            <div class="section-title text-center mb-50">
                <h2>— 歌手简介 —</h2>
                <p><span class="primary-color">用声音        记录灵感</span></p>
            </div><!-- section-title -->
            <div class="js-singer-details-area">
                <div class="row">
                    <div class="col-lg-3">
                        <div class="js-single-singer">
                            <div class="js-singer-thumbnail">
                                <img alt="Singer Thumbnail" src="/assets/images/singer/2.jpg">
                            </div>

                        </div>
                    </div><!-- col-lg-3 -->
                    <div class="col-lg-9">
                        <div class="js-singer-content">
                            <h4>@ViewBag.singername</h4>
                            <p>@ViewBag.intro</p>
                        </div>
                    </div><!-- col-lg-3 -->
                </div><!-- row -->
            </div><!-- js-singer-details-area" -->
        </div><!-- container -->
    </section><!-- Album Section End -->

    <span class="scrolltop"><i class="pe-7s-angle-up"></i></span>

    <section class="js-singer-area bg-dark has-color" id="singer">
        <div class="container">
            <div class="section-title text-center mb-50">
                <h2>专 <span class="primary-color">辑</span></h2>
            </div><!-- section-title -->
            <div class="js-singer-slider-item row">
                <div class="col-lg-3 col-sm-6">
                    <div class="js-single-singer">
                        <div class="js-singer-thumbnail">
                            <img src=@ViewBag.albumimg[0] alt="Singer Thumbnail">
                        </div>
                        <div class="js-singer-content">
                            <h4><a href="album-single?id=@ViewBag.albumid[0]">@ViewBag.albumname[0]</a></h4>
                        </div>
                    </div>
                </div>
                <div class="col-lg-3 col-sm-6">
                    <div class="js-single-singer">
                        <div class="js-singer-thumbnail">
                            <img src=@ViewBag.albumimg[1] alt="Singer Thumbnail">
                        </div>
                        <div class="js-singer-content">
                            <h4><a href="album-single?id=@ViewBag.albumid[1]">@ViewBag.albumname[1]</a></h4>
                        </div>
                    </div>
                </div>
                <div class="col-lg-3 col-sm-6">
                    <div class="js-single-singer">
                        <div class="js-singer-thumbnail">
                            <img src=@ViewBag.albumimg[2] alt="Singer Thumbnail">
                        </div>
                        <div class="js-singer-content">
                            <h4><a href="album-single?id=@ViewBag.albumid[2]">@ViewBag.albumname[2]</a></h4>
                        </div>
                    </div>
                </div>
                <div class="col-lg-3 col-sm-6">
                    <div class="js-single-singer">
                        <div class="js-singer-thumbnail">
                            <img src=@ViewBag.albumimg[3] alt="Singer Thumbnail">
                        </div>
                        <div class="js-singer-content">
                            <h4><a href="album-single?id=@ViewBag.albumid[3]">@ViewBag.albumname[3]</a></h4>
                        </div>
                    </div>
                </div>
            </div>  <!-- js-singer-slider-item -->
        </div>
    </section><!-- js-singer-area End -->




    <script src="/assets/js/vendor/jquery-3.3.1.min.js"></script>
    <script src="/assets/js/bootstrap.min.js"></script>
    <script src="/assets/js/owl.carousel.min.js"></script>
    <script src="/assets/js/jquery.magnific-popup.min.js"></script>
    <script src="/assets/js/plugins.js"></script>
    <script src="/assets/js/menu.js"></script>
    <script src="/assets/js/countdown.js"></script>
    <script src="/assets/js/jquery.jplayer.min.js"></script>
    <script src="/assets/js/jplayer.playlist.min.js"></script>
    <script src="/assets/js/audio-player.js"></script>
    <script src="/assets/js/audioplayer.js"></script>
    <script src="/assets/js/main.js"></script>



</body>

</html class="no-js">